@model User
@await Html.PartialAsync("_VisitorNav")

<link rel="stylesheet" href="~/css/Register.css" asp-append-version="true" />





<div class="cont">
    <div class="form sign-in">
        <h2>Become a Member</h2>
        <form asp-action="Register" asp-controller="Users" method="post">

            <label asp-for="FirstName" class="form-label">First Name</label>
            <input asp-for="FirstName" class="form-control">
            <span asp-validation-for="FirstName" class="form-text text-danger h4"></span>

            <label asp-for="LastName" class="form-label">Last Name</label>
            <input asp-for="LastName" class="form-control">
            <span asp-validation-for="LastName" class="form-text text-danger h4"></span>

            <label asp-for="Email" class="form-label">E-mail</label>
            <input asp-for="Email" class="form-control">
            <span asp-validation-for="Email" class="form-text text-danger h4"></span>

            <label asp-for="Phone" class="form-label">Phone Number</label>
            <input asp-for="Phone" class="form-control">
            <span asp-validation-for="Phone" class="form-text text-danger h4"></span>

            <label asp-for="Address" class="form-label"></label>
            <input asp-for="Address" class="form-control">
            <span asp-validation-for="Address" class="form-text text-danger h4"></span>

            <label asp-for="Password" class="form-label"></label>
            <input asp-for="Password" type="password" class="form-control">
            <span asp-validation-for="Password" class="form-text text-danger h4"></span>

            <label asp-for="ConfirmPassword" class="form-label"></label>
            <input asp-for="ConfirmPassword" type="password" class="form-control">
            <span asp-validation-for="ConfirmPassword" class="form-text text-danger h4"></span>

            <label asp-for="Role" class="form-label"></label>
            <select class="form-select" asp-for="Role">
                <option selected>Open this select menu</option>
                <option asp-value="Admin">Admin</option>
                <option asp-value="User">User</option>
                <option asp-value="Shipper">Shipper</option>
            </select>
            <span asp-validation-for="Role" class="form-text text-danger h4"></span>

            <button type="submit" class="submit">Sign Up</button>
        </form>

        <div class="sub-cont">
            <div class="img">
                <div class="img__text m--up">
                    <h2>
                        One of us?
                    </h2>
                    <p>If you already has an account, just sign in. We've missed you!</p>
                </div>


                <div class="img__btn">
                    <a href="/login" style="
                       z-index: 2;
                       position: absolute;
                       left: 0;
                       top: 0;
                       width: 100%;
                       height: 100%;
                       border: 2px solid #fff;
                       border-radius: 30px; color:white; text-decoration:none">Log In</a>

                </div>
            </div>
        </div>

    </div>
</div>