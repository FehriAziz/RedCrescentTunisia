@model LoginUser
@await Html.PartialAsync("_VisitorNav")

<link rel="stylesheet" href="~/css/Login.css" asp-append-version="true" />


<div class="cont">
    <div class="form sign-in">
        <h2>Welcome back</h2>
        <form method="post" asp-action="Login" asp-controller="Users">

            <label asp-for="LoginEmail">E-mail</label>
            <input asp-for="LoginEmail" class="form-control">
            <span asp-validation-for="LoginEmail" class="form-text text-danger h4"></span>

            <label asp-for="LoginPassword">Password</label>
            <input asp-for="LoginPassword" class="form-control">
            <span asp-validation-for="LoginPassword" class="form-text text-danger h4"></span>
            <p class="forgot-pass">Forgot password?</p>

            <button type="submit" value="Login" class="submit">Sign In</button>


        </form>

        <div class="sub-cont">
            <div class="img">
                <div class="img__text m--up">
                    <h2>New here?</h2>
                    <p>Sign up and discover great amount of new opportunities!</p>
                </div>
                <div class="img__text m--in">
                    <h2>One of us?</h2>
                    <p>If you already has an account, just sign in. We've missed you!</p>
                </div>

                <div class="img__btn">
                    <a href="/register" style="
                       z-index: 2;
                       position: absolute;
                       left: 0;
                       top: 0;
                       width: 100%;
                       height: 100%;
                       border: 2px solid #fff;
                       border-radius: 30px;color:white; text-decoration:none ;">Register</a>

                </div>

            </div>
            <div>
            </div>
        </div>
    </div>
</div>